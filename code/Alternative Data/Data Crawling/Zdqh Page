# This is the main data crawling function, chrome_driver_path is the path to the chrome driver. Start_page is which page to start
def crawl_page_links_zdqh(chrome_driver_path,start_page):
    driver = webdriver.Chrome(chrome_driver_path)
    print('init driver')
    website_1 = "http://www.zdqh.com/about/resear.php?result/"
    website_2 = "/JXU0RTJEJXU1OTI3JXU2NzFGJXU4RDI3JXU5MUQxJXU1QzVF"
    page = str(start_page)
    current_website_link = website_1+page+website_2
    driver.get(current_website_link)
    title_list =[]
    url_list =[]
    date_list = [] 
    print('load page')
    time.sleep(5)
    print('processing')
    page_n = start_page
    current_length = 0
    try:
        while True:
            links = driver.find_elements_by_xpath("//div[@class='newsMain']/ul/li/a")
            dates = driver.find_elements_by_xpath("//div[@class='newsMain']/ul/li")
            print('page %s:'%page_n , len(links))
            for cur_link,cur_date in zip(links,dates):
                current_length+=1
                url_list.append(cur_link.get_attribute(u'href'))
                title_list.append(cur_link.text)
                date_list.append(pd.to_datetime(cur_date.text.split("\n")[1],infer_datetime_format=True))
            next_link = driver.find_elements_by_xpath("//div[@class='page']/a")[-1].get_attribute(u'href')
            if next_link == current_website_link:
                driver.close()
                print("Completed")
                break
            else:
                current_website_link = next_link
                driver.get(current_website_link)
            page_n+=1
            time.sleep(5)
    except Exception as e: 
        print(e)
        current_length -=1
        result = pd.DataFrame({'url': url_list[:current_length],'title': title_list[:current_length],'date':date_list[:current_length]})
        print(current_length)
        print('Program Died')
        return result
    
    result = pd.DataFrame({'url': url_list,'title': title_list,'date':date_list})
    print("Completed")
    return result

#Sample
zdqh_df = crawl_page_links_zdqh('/home/liangchen/4e/Data Crawling/chromedriver',1)


